<div class="row m-4 ">
  <div class="col-md-5 m-auto bg-light bg-opacity-25 shadow rounded py-2">
    <h3 class="text-center  text-dark">Sign up</h3>
    <hr>
    <div class="col-md-10 m-auto">
      {{> message}}
      <form action="/user/register" method="POST" id="register-form">
        <div id="user-input" class="m-auto my-3 p-2 d-flex  shadow">
          <i class="fa-solid fa-user mx-2 pt-1"></i>
          <input type="text" id="name" name="name" class="form-control" placeholder="Name"
            value="{{ registerData.name }}" required>
        </div>
        <div id="user-input" class="m-auto my-3 p-2 d-flex shadow">
          <i class="fas fa-envelope mx-2 pt-1"></i>
          <input type="email" id="email" name="email" class="form-control" placeholder="Email"
            value="{{ registerData.email }}" required>
        </div>
        <div id="user-input" class="m-auto my-3 p-2 d-flex shadow">
          <i class="fas fa-lock mx-2 pt-1"></i>
          <input type="password" id="password" name="password" class="form-control" placeholder="Password"
            value="{{ registerData.password }}" required>
        </div>
        <div id="user-input" class="m-auto my-3 p-2 d-flex shadow">
          <i class="fas fa-unlock-alt mx-2 pt-1"></i>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="ConfirmPassword" value="{{ registerData.confirmPassword }}" required>
        </div>

        <div class="m-auto my-3 d-flex">
          <button class="btn btn-danger w-100 shadow" onclick="formCheck()">Register</button>
        </div>
      </form>
      <p class="text-center ">Have an account？<a href="/user/login" class="loginMsg">立即登入</a></p>
    </div>
  </div>
</div>

<script>
  const formCheck = () => {
    const form = document.querySelector('#register-form')
    form.classList.add('was-validated')
  }
</script>