<div class="container mt-5" id="register-page">
  <div class="row justify-content-center">
    <div class="card card-body" style="max-width: 450px;">
      <h3 class="text-center">註冊</h3>
      {{>message}}
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">名稱</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="請輸入名稱"
            maxlength="50"
            value="{{name}}"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="請輸入Email"
            value="{{email}}"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="請輸入 8 ~ 12 位密碼"
            maxlength="12"
            minlength="8"
            autocomplete="off"
            value="{{password}}"
            required
          />
        </div>
        <div class="form-group">
          <label for="confirmPassword">確認密碼</label>
          <input
            type="password"
            class="form-control"
            id="confirmPassword"
            name="confirmPassword"
            placeholder="請再次確認密碼"
            maxlength="12"
            minlength="8"
            autocomplete="off"
            value="{{confirmPassword}}"
            required
          />
        </div>
        <button
          class="btn btn-primary btn-block mt-3"
          type="submit"
        >註冊</button>
        <a href="/auth/facebook" class="btn btn-info btn-block mt-3">Facebook
          登入</a>
      </form>
      <p class="lead">已註冊？<a href="/users/login">登入</a></p>
    </div>
  </div>
</div>